{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "lib": ["DOM", "ES2021"],
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["tests", "dist"]
}

